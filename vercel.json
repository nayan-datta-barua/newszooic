{
    "version":2,
    "builds": [{
        "src": "core/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.10.10" }
    },
    {
        "src":"build.sh",
        "use": "@vercel/static-build",
        "config":{
            "disDir":"staticfiles_build"
        }

    }

],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "djangoprojectname/wsgi.py"
        }
    ]
}